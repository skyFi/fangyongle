{
  "requireConfig": true,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "useTabs": false,
  "cssEnable": ["css", "less", "scss", "postcss", "wxss"],
  "overrides": [
    {
      "files": "*.wxml",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.wxss",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    }
  ]
}
